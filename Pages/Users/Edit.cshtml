@page
@model Storeii.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
                <label asp-for="User.UserName" class="control-label"></label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.UserPass" class="control-label"></label>
                <input asp-for="User.UserPass" class="form-control" />
                <span asp-validation-for="User.UserPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Role" class="control-label"></label>
                <input asp-for="User.Role" class="form-control" />
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Customer" class="control-label"></label>
                <select asp-for="User.Customer" class="form-control" asp-items="ViewBag.Customer"></select>
                <span asp-validation-for="User.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Driver" class="control-label"></label>
                <select asp-for="User.Driver" class="form-control" asp-items="ViewBag.Driver"></select>
                <span asp-validation-for="User.Driver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Supplier" class="control-label"></label>
                <select asp-for="User.Supplier" class="form-control" asp-items="ViewBag.Supplier"></select>
                <span asp-validation-for="User.Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
