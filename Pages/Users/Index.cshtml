@page
@model Storeii.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].UserPass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th>
                <!-- @Html.DisplayNameFor(model => model.User[0].CustomerNavigation) -->
                CustomerId
            </th>
            <th>
                <!-- @Html.DisplayNameFor(model => model.User[0].DriverNavigation) -->
                DriverId
            </th>
            <th>
                <!-- @Html.DisplayNameFor(model => model.User[0].SupplierNavigation) -->
                SupplierId
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
                <td>
                    @if (item.CustomerNavigation != null)
                    {
                        <p>@item.CustomerNavigation.Id</p>
                    }
                    else
                    {
                        <p></p>
                    }
                </td>
                <td>
                    @if (item.DriverNavigation != null)
                    {
                        <p>@item.DriverNavigation.Id</p>
                    }
                    else
                    {
                        <p></p>
                    }
                </td>
                <td>
                    @if (item.SupplierNavigation != null)
                    {
                        <p>@item.SupplierNavigation.Id</p>
                    }
                    else
                    {
                        <p></p>
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
