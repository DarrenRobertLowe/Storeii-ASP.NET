
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Banner -->
                <div class="row">
                    <img src="~/images/site/hero.png" alt="Storeii Banner" />
                </div>

                <!-- Navbar -->
                <div class="row">
                    @await Html.PartialAsync("_Navbar")
                </div>

                <!-- Page Content -->
                <div class="row">
                    <div class="container">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>