@model Storeii.Models.Product

<div class="container">
    <h1>@Model.ProductName</h1>
    <img src="@Url.Content("~/images/products/" + Model.Image)"
         class="img-fluid mb-3"
         alt="@Model.ProductName" />
    <p>@Model.ProductDescription</p>
    <p class="fw-bold">€@Model.Price</p>
</div>