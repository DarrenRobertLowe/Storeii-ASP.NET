@using Storeii.Helpers;

@{
    ViewData["Title"] = "Cart";
}

@model List<Storeii.Models.Product>

<h2>Your Cart</h2>
@if (!Model.Any())
{
    <p>Your cart is empty.</p>
} 
else 
{
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="@Url.Content(Paths.ProductImages + product.Image)" class="card-img-top" alt="@product.ProductName">
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text">@product.ProductDescription</p>
                            <p class="card-text fw-bold">€@product.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}